{
  "name": "bb-edit",
  "productName": "BB-Edit",
  "version": "1.7.3.1",
  "description": "Battle Brothers save editor for Battle Brothers v1.5.1+",
  "author": "9th King of Lies",
  "contributors": [
    {
      "name": "ScarGlamour"
    }
  ],
  "keywords": [
    "battle-brothers",
    "save-editor",
    "hex",
    "bb-edit"
  ],
  "main": "src/main.js",
  "scripts": {
    "start": "electron .",
    "dist": "electron-builder"
  },
  "engines": {
    "node": ">=14.0.0",
    "electron": ">=23.0.0"
  },
  "devDependencies": {
    "electron": "^36.3.1",
    "electron-builder": "^26.0.12",
    "rcedit": "^4.0.1"
  },
  "license": "ISC",
  "dependencies": {
    "@electron/remote": "^2.1.2"
  },
  "build": {
    "directories": {
      "buildResources": "build"
    },
    "appId": "com.scarglamour.bbedit",
    "productName": "BB-Edit",
    "asar": true,
    "files": [
      "src/main.js",
      "src/renderer/**",
      "game-art/**",
      "!tools/**",
      "!build/**"
    ],
    "forceCodeSigning": false,
    "win": {
      "artifactName": "${productName}-v${version}.${ext}",
      "target": [
        "portable",
        "zip"
      ],
      "icon": "build/bbedit.ico"
    }
  }
}
